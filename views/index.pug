html
    head
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous")
    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-dark
            a.navbar-brand(href='#') Navbar
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNavAltMarkup', aria-controls='navbarNavAltMarkup', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarNavAltMarkup.collapse.navbar-collapse
                .navbar-nav
                    a.nav-item.nav-link.active(href='#')
                        | Home 
                        span.sr-only (current)
                  
        .container.mt-2
            .row
                .col-lg-4.col-md-4.col-sm-12
                    form(action="/" method="POST")
                        .form-group
                            label(for='exampleInputEmail1') Firstname
                            input#exampleInputEmail1.form-control(name="firstname" type='text' placeholder='Firstname')
                        .form-group
                            label(for='exampleInputEmail1') Lastname
                            input#exampleInputEmail1.form-control(name="lastname" type='text' placeholder='Lastname')
                        .form-group
                            label(for='exampleInputEmail1') Email address
                            input#exampleInputEmail1.form-control(name="email" type='text' placeholder='Enter email')
                        .form-group
                            label(for='exampleInputPassword1') Password
                            input#exampleInputPassword1.form-control(name="password" type='password', placeholder='Password')

                        button.btn.btn-primary(type='submit') Submit                

                .col-lg-8.col-md-8.col-sm-12
                    table.table.table-striped.table-responsive
                        thead
                            th Firstname
                            th Lastname
                            th Email
                            th Password
                            th Delete
                        tbody
                            each item in data
                                tr
                                    td= item.firstname
                                    td= item.lastname
                                    td= item.email
                                    td= item.password
                                    td 
                                        a.btn.btn-sm.btn-dark(href='/'+item._id) Delete